# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# MongoDB Configuration (uses __ for nested configuration)
# IMPORTANT: All MongoDB settings MUST be defined here in .env file
# They are NOT in appsettings.json
# For local development: mongodb://localhost:27017
# For Docker Compose: mongodb://mongodb:27017
MongoDbSettings__ConnectionString=mongodb://localhost:27017
MongoDbSettings__DatabaseName=RealEstateDB
MongoDbSettings__OwnersCollectionName=Owners
MongoDbSettings__PropertiesCollectionName=Properties
MongoDbSettings__PropertyImagesCollectionName=PropertyImages
MongoDbSettings__PropertyTracesCollectionName=PropertyTraces

# CORS Configuration
# IMPORTANT: CORS origins MUST be defined here in .env file
# They are NOT in appsettings.json
CorsOrigins=http://localhost:3000,http://localhost:5173,http://localhost:5000,https://localhost:5001

# Logging (Optional - can override appsettings.json)
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
